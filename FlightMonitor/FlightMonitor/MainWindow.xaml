<Window x:Class="FlightMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MaxWidth="320"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Connect" Click="Button_Click" Margin="10,10,10,10"/>
        <TextBox Name="_log" Margin="10,10,10,10" Grid.Row="1" TextWrapping="NoWrap" FontFamily="Courier New" />
        <TextBox Name="_readData" Margin="10,10,10,10" Grid.Row="1" Grid.Column="1" TextWrapping="NoWrap" FontFamily="Courier New" />

    </Grid>
</Window>
